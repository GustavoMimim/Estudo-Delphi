begin

  visor.Text := visor.Text + (Sender as TSpeedButton).Caption;

end;

procedure TForm1.seisClick(Sender: TObject);
begin

  visor.Text := visor.Text + (Sender as TSpeedButton).Caption;

end;

procedure TForm1.seteClick(Sender: TObject);
begin

  visor.Text := visor.Text + (Sender as TSpeedButton).Caption;

end;

procedure TForm1.tresClick(Sender: TObject);
begin

  visor.Text := visor.Text + (Sender as TSpeedButton).Caption;

